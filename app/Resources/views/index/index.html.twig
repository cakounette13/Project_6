{% extends 'base.html.twig' %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent ()}}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAFroHBrDo8zJfboSR3r5Z_YWnLv9HEaxw&libraries=geometry,visualization"></script>
{% endblock %}

{% block body %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1 col-xs-12">
                    <div id="birds"></div>
                </div>
            </div>
        </div>
{% block javascripts %}
    {{ parent() }}
    <script>
        window.baseUrl = '{{ path('bird') }}';
    </script>
    {% if app.environment == 'dev' %}
        <script src="http://127.0.0.1:3000/static/searchBird.js"></script>
    {% else %}
        <script src="{{ asset('dist/searchBird.js') }}"></script>
    {% endif %}
{% endblock %}
{% endblock %}